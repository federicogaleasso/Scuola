/*
Galeasso Federico 3C
Scrivere un programma che richieda due numeri interi in input (N1 e N2) e svolva le operazioni date.
*/

#include <stdio.h>
#include <math.h>
int main (){
	int N1, N2, Somma, Sottrazione, Moltiplicazione, DivisioneQI, Restodivisione, Cambiosegno, Elevpotenza;
	float  DivisioneQR;
	printf("Inserisci il primo numero: \n");
	scanf("%d", &N1);
	printf("Inserisci il secondo numero: \n");
	scanf("%d", &N2);
	Somma=N1+N2;
	Sottrazione=N1-N2;
	Moltiplicazione=N1*N2;
	DivisioneQI=N1/N2;
	DivisioneQR=N1/N2;
	Restodivisione=N1%N2;
	Cambiosegno=-N1;
	Cambiosegno=-N2;
	//Elevpotenza=pow (N1, N2);
	printf("Il risultato di %d+%d vale %d\n", N1, N2, Somma);
	printf("Il risultato di %d-%d vale %d\n", N1, N2, Sottrazione);
	printf("Il risultato di %d*%d vale %d\n", N1, N2, Moltiplicazione);
	printf("Il risultato di %d/%d vale %d\n", N1, N2, DivisioneQI);
	printf("Il risultato di %d/%d vale %f\n", N1, N2, DivisioneQR);
	printf("Il resto di %d/%d Ã¨ %d\n", N1, N2, Restodivisione);
	printf("Cambio di segno dei numeri -(%d), -(%d): %d\n", N1, N2, Cambiosegno);
	//printf("L'elevamento a potenza %d^%d vale %d\n", N1, N2, Elevpotenza);
return 0;
}
